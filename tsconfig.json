{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "outDir": "dist",
  },
  "include": [
    "main",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}