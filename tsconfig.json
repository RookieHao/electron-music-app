{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "esnext",
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "jsx": "react",
    "outDir": "dist",
    "baseUrl":"./",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@router/*": ["src/router/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@views/*": ["src/views/*"],
      "@assets/*": ["src/assets/*"],
      "@declaration/*": ["src/declaration/*"],
    },
  },
  "include": ["src","main","public"],
  "exclude": [
    "node_modules",
    "dist",
    "config"
  ]
}